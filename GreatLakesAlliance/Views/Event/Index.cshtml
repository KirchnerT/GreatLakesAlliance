@model IEnumerable<GreatLakesAlliance.Models.EventDataModel>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-top: 75px">Events</h2>

<p>
    @{
        if (User.IsInRole("Admin"))
        {
        <div>
            <div>
                <input type="submit" value="Create New Event" class="btn btn-default" style="width: 150px" onclick="location.href='@Url.Action("Create", "Event")'" />
            </div>
        </div>
        }
    }
</p>
<table class="table">
    <tr>
        <th>
            Event Name
        </th>
        <th>
            Start Date
        </th>
        <th>
            End Date
        </th>
        <th>
            Start Time
        </th>
        <th>
            End Time
        </th>
        <th>
            Volunteers Needed
        </th>
        <th>
            Location
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.eventName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.eventStartDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.eventEndDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.startTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.endTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.volunteersNeeded)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.location)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.description)
    </td>
    <td>
        @{ if (User.IsInRole("Admin"))
            {
                <a>@Html.ActionLink("Edit", "Edit", new { id = item.eventId }) | </a>
                <a>@Html.ActionLink("Delete", "Delete", new { id = item.eventId }) | </a>
            }
        }

        @Html.ActionLink("Details", "Details", new { id = item.eventId })
    </td>
</tr>
}

</table>
