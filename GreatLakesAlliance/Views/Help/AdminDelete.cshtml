
@{
    ViewBag.Title = "AdminDelete";
}

<h2 style="margin-top: 75px">Deleting User Accounts</h2>

<div style="margin-top: 25px">
    First, click 'Admin' on the navigation bar.
</div>
<div>
    <img style="width: 70%" src="~/Content/AdminNavBar.jpg" />
</div>
<div style="margin-top: 25px">
    Click the 'Reports' button on the left.
</div>
<div>
    <img style="width: 70%" src="~/Content/ReportsButton.jpg" />
</div>
<div style="margin-top: 25px">
    The 'Users' button will take you to a list of all users.
</div>
<div>
    <img style="width: 70%" src="~/Content/UserReports.jpg" />
</div>
<div style="margin-top: 25px">
    If the user has yet to be deleted, there will be a button named 'Delete' to the right of their name and email address. Click that to delete the user.
</div>
<div>
    <img style="width: 70%" src="~/Content/DeleteUserExample.jpg" />
</div>

<div class="form-group" style="margin-top: 5%; margin-bottom: 10%">
    <div class=" = col-md-2">
        <input type="button" title="Delete" class="btn btn-default" value="Back" onclick="location.href='@Url.Action("", "Help")'" />
    </div>
</div>
